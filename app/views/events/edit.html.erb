<% content_for :title, "Edit #{@event.title}" %>

<%= render 'shared/errors', model: @event %>

<%= bootstrap_form_for @event do |f| %>
  <%= f.text_field :title, autofocus: true %>
  <%= f.text_area :body %>

  <%= f.date_select :started_on %>
  <%= f.date_select :ended_on %>

  <%= f.select :category_id, @categories.map { |category| [ category.title, category.id ] } %>

  <%= f.file_field :image %>
  <%= f.text_field :image_caption %>
  <%= f.text_field :image_credit %>

  <%= f.submit %>
<% end %>
