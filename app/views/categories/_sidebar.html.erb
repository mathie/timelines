<div class="col-sm-3">
  <h2>Categories</h2>

  <ul class="nav nav-stacked nav-pills">
    <% if current_page? timeline_categories_path(timeline) %>
      <li class="active">
        <%= link_to 'All categories', timeline_categories_path(timeline) %>
      </li>
    <% else %>
      <li>
        <%= link_to 'All categories', timeline_categories_path(timeline) %>
      </li>
    <% end %>

    <% timeline.categories.each do |category| %>
      <% if current_page? category_path(category) %>
        <li class="active"><%= link_to category.title, category %></li>
      <% else %>
        <li><%= link_to category.title, category %></li>
      <% end %>
    <% end %>
  </ul>
</div>
