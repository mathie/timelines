<% content_for :title, @era.title %>
<% content_for :toolbar do %>
  <%= link_to 'Edit', edit_era_path(@era), class: 'btn btn-default' %>
  <%= link_to 'Delete', @era, method: :delete, class: 'btn btn-danger' %>
<% end %>

<dl>
  <dt>Started on</dt>
  <dd><%= @era.started_on.to_s(:long) %></dd>

  <dt>Ended on</dt>
  <dd><%= @era.ended_on.to_s(:long) %></dd>

  <dt>Title</dt>
  <dd><%= @era.title %></dd>

  <dt>Details</dt>
  <dd><%= simple_format @era.body %></dd>
</dl>